<div id="collection-item {{ form.vars.id }}">
	{% if form.vars.data is not null and form.vars.data.path is not null %}
		<img src="{{ asset(form.vars.data.path) }}" alt="{{ form.vars.id }}" style="width: 100px;">
	{% endif %}
	{{ form_row(form) }}
	<button type="button" class="btn btn-danger collection-item-delete">
		<i class="fas fa-trash"></i>
	</button>
</div>
